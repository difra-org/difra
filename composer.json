{
    "name": "difra/difra",
    "description": "Difra framework",
    "keywords": [
        "framework",
        "php"
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:difra-org/cms.git"
        }
    ],
    "homepage": "https://www.difra.org",
    "license": "BSD-2-Clause",
    "require": {
        "difra/lib-security": "*",
        "php": "8.x",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-date": "*",
        "ext-dom": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-pdo_mysql": "*",
        "ext-Reflection": "*",
        "ext-session": "*",
        "ext-simplexml": "*",
        "ext-xsl": "*",
        "ext-zlib": "*",
        "wikimedia/less.php": "^3.1.0",
        "scssphp/scssphp": "1.1"
    },
    "autoload": {
        "classmap": ["src/main.php"],
        "psr-4": {
            "Difra\\": "src"
        }
    }
}
